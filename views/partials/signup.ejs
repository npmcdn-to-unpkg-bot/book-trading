<div class="container">

    <div class="col-sm-6 col-sm-offset-3">
    
        <h1><span class="fa fa-sign-in"></span> Signup</h1>
        
        <!-- SIGNUP FORM -->
        <form method="POST" ng-submit="vm.signup()">
            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" name="name" ng-model="vm.user.name">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="email" ng-model="vm.user.email">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password" ng-model="vm.user.password">
            </div>
    
            <button type="submit" class="btn btn-primary btn-lg">Signup</button>
        </form>
    
        <hr>
    
        <p>Already have an account? <a href="/login">Login</a></p>
        <p>Or go <a href="/">home</a>.</p>
    
    </div>

</div>