<div class="container">
    <!--Update city and state-->
    <h1>Update Profile</h1>
    <form method="POST" ng-submit="vm.updateProfile()">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" ng-model="vm.name">
      </div>
      <div class="form-group">
        <label for="city">City</label>
        <input type="text" class="form-control" id="city" ng-model="vm.city">
      </div>
      <div class="form-group">
        <label for="state">State</label>
        <input type="text" class="form-control" id="state" ng-model="vm.state">
      </div>
      <button type="submit" class="btn btn-success">Save changes</button>
    </form>
    
    <hr> 
    
    <!--Update city and state-->
    <h1>Change password</h1>
    <form method="POST" ng-submit="vm.updatePassword()">
      <div class="form-group">
        <label for="currentPassword">Current password</label>
        <input type="password" class="form-control" id="currentPassword" ng-model="vm.currentPassword" required>
      </div>
      <div class="form-group">
        <label for="newPassword">New password</label>
        <input type="password" class="form-control" id="newPassword" ng-model="vm.newPassword" required>
      </div>
      <button type="submit" class="btn btn-success">Save changes</button>
    </form>
</div>